<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background layer -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_20sdp" />
            <solid android:color="#ffffff" /> <!-- Light background color -->
        </shape>
    </item>

    <!-- Progress layer -->
    <item>
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/_20sdp" />
                <solid android:color="#FE9F45" /> <!-- Progress color -->
            </shape>
        </clip>
    </item>
</layer-list>
