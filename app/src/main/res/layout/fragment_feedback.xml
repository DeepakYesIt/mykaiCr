<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.mainfragment.profilesetting.FeedbackFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginHorizontal="@dimen/_16sdp">

            <RelativeLayout
                android:id="@+id/rlToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgBackFeedback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/black_images_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="#171D1B"
                    android:text="Feedback"
                    android:textSize="@dimen/_15sdp" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/imgMainFeedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_35sdp"
                android:src="@drawable/feedback_icon"/>

            <RelativeLayout
                android:id="@+id/relEnterYourEMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgMainFeedback"
                android:layout_marginTop="@dimen/_15sdp">

                <ImageView
                    android:id="@+id/imgFeedbackMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/feedback_message_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter your E-mail"
                    android:layout_toEndOf="@id/imgFeedbackMessage"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relEditEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_name_bg"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_below="@+id/relEnterYourEMail">

                <TextView
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="abxy@gmail.com"
                    android:textSize="@dimen/_13sdp"
                    android:background="@null"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:textColorHint="@color/grey"
                    android:fontFamily="@font/poppins"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relGiveYourFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relEditEmail"
                android:layout_marginTop="@dimen/_15sdp">

                <ImageView
                    android:id="@+id/imgFeedbackMsz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/feedback_message_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Give your feedback"
                    android:layout_toEndOf="@id/imgFeedbackMsz"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relEditDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/feedback_message_bg"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_below="@+id/relGiveYourFeedback">

                <EditText
                    android:id="@+id/edtDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="This app has completely changed how I plan meals! I love how easy it is to find healthy recipes and create shopping lists. Itâ€™s a game-changer for my weekly grocery trips"
                    android:padding="@dimen/_8sdp"
                    android:background="@null"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    android:textColorHint="@color/grey"
                    android:fontFamily="@font/poppins"
                    android:gravity="top|start" /> <!-- Align text to the top left -->

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relFeedbackSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/_40sdp"
                android:background="@drawable/green_btn_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingVertical="@dimen/_10sdp"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp" />

            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>