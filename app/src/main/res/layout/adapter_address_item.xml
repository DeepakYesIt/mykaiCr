<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relHomeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginVertical="@dimen/_5sdp"
        android:background="@drawable/height_type_bg"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:id="@+id/imageHome"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/home_icon"
            app:tint="@color/orange" />

        <RelativeLayout
            android:id="@+id/relSelectHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toStartOf="@+id/imagePencilIcon"
            android:layout_toEndOf="@+id/imageHome">

            <TextView
                android:id="@+id/tvSetName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Home"
                android:textColor="@color/light_black"
                android:textSize="@dimen/_12sdp" />

            <ImageView
                android:id="@+id/imgPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tvSetName"
                android:layout_marginStart="@dimen/_10sdp"
                android:visibility="gone"
                android:src="@drawable/circle_fill_tick_icon"/>

            <TextView
                android:id="@+id/tvFullAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSetName"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/montserrat_medium"
                android:text="123 barn cre"
                android:maxLines="3"
                android:textColor="@color/light_black"
                android:textSize="@dimen/_8sdp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/imagePencilIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/edit_pencil_icon" />

    </RelativeLayout>


</RelativeLayout>