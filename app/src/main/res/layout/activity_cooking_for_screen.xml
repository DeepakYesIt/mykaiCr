<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CookingForScreenActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/_20sdp">

             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/chef_kitchen_cooking_vegetables"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/who_will_be_you_cooking_for"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_13sdp"
                android:fontFamily="@font/montserrat_semibold"/>

            <RelativeLayout
                android:id="@+id/relMySelf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/orange_box_bg">

                <TextView
                    android:id="@+id/tvMyself"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/poppins"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="Myself"
                    android:textColor="#3E3E3E"
                    android:textSize="@dimen/_13sdp" />

                <ImageView
                    android:id="@+id/imageMyselfTick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:src="@drawable/orange_tick_icon"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relMySelfPartner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/gray_box_border_bg">

                <TextView
                    android:id="@+id/tvMySelfPartner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:fontFamily="@font/poppins"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="#3E3E3E"
                    android:text="Myself &amp; my partner"
                    android:textSize="@dimen/_13sdp" />

                <ImageView
                    android:id="@+id/imageMyselfMyPartnerTick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:src="@drawable/orange_tick_icon"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relMyFamily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/gray_box_border_bg">

                <TextView
                    android:id="@+id/tvMyFamily"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/poppins"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="#3E3E3E"
                    android:text="My Family"
                    android:textSize="@dimen/_13sdp" />

                <ImageView
                    android:id="@+id/imageMyFamily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:src="@drawable/orange_tick_icon"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlNextCooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/green_btn_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingHorizontal="@dimen/_50sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    android:text="Next"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>