<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_main_background"
    tools:context=".activity.LetsStartOptionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/rlMainImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40sdp">

            <ImageView
                android:id="@+id/imagesAssistant"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="@dimen/_200sdp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/main_logo" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/myka_meal_planner"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/poppins_bold"
                android:layout_below="@+id/imagesAssistant"
                android:layout_marginTop="@dimen/_15sdp"
                android:textSize="@dimen/_18sdp"/>

            <TextView
                android:id="@+id/tvDescriptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sign_in_to_create_plan_and_enjoy_delicious_meals"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@+id/tvTitle"
                android:textColor="#3C4541"
                android:fontFamily="@font/poppins"/>

            <RelativeLayout
                android:id="@+id/rlLetsCooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/rlLogin"
                android:layout_marginHorizontal="@dimen/_25sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/green_btn_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingVertical="@dimen/_10sdp"
                    android:text="Let's Get Cooking!"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_40sdp"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/tvAlreadyAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account, "
                    android:textSize="@dimen/_12sdp"
                    android:textColor="#3C4541"
                    android:fontFamily="@font/poppins_medium"/>

                <TextView
                    android:id="@+id/tvLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textColor="@color/light_green"
                    android:layout_toEndOf="@+id/tvAlreadyAccount"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/poppins_semibold"/>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>