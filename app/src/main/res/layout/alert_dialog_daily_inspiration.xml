<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:background="@drawable/dialog_bg"
        android:paddingHorizontal="@dimen/_5sdp"
        android:paddingVertical="@dimen/_8sdp">
        <TextView
            android:id="@+id/textHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Daily Inspiration"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <HorizontalScrollView
            android:id="@+id/llFoodTimes"
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="5">
                <LinearLayout
                    android:id="@+id/llBreakfast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textBreakfast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:text="Breakfast"
                        android:textColor="#FE9F45"
                        android:textStyle="bold" />
                    <View
                        android:id="@+id/viewBreakfast"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="#FE9F45" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llBrunch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textBrunch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Brunch"
                        android:gravity="center"
                        android:textColor="#999999"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/viewBrunch"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="#FE9F45"
                        android:visibility="invisible" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llLunch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textLunch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Lunch"
                        android:gravity="center"
                        android:textColor="#999999"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/viewLunch"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="#FE9F45"
                        android:visibility="invisible" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llSnaks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textSnaks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="@string/snacks"
                        android:gravity="center"
                        android:textColor="#999999"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/viewSnaks"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="#FE9F45"
                        android:visibility="invisible" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llDinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textDinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Dinner"
                        android:gravity="center"
                        android:textColor="#999999"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/viewDinner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="#FE9F45"
                        android:visibility="invisible" />

                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Noodles with chicken"
                    android:textColor="#3C4541"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_toLeftOf="@id/textMin"
                    android:layout_alignParentStart="true"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/textMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.8 (125)"
                    android:layout_centerInParent="true"
                    android:layout_alignParentEnd="true"
                    android:textColor="#3C4541"
                    app:drawableStartCompat="@drawable/star_rating_icon"
                    android:textSize="14sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="50 min"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@id/tvprice"
                    android:textColor="#3C4541"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tvprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$350* per /s"
                    android:layout_centerInParent="true"
                    android:textColor="#3C4541"
                    android:layout_alignParentEnd="true"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
            </RelativeLayout>

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/llViewPager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/textMin">
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Data Found"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:id="@+id/tvnodata"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginVertical="@dimen/_5sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp"
            tools:ignore="MissingConstraints" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/layonboarding_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/_35sdp"
            android:overScrollMode="never"
            android:nestedScrollingEnabled="false"
            android:clipToPadding="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"/>

        <!-- Buttons -->
        <LinearLayout
            android:id="@+id/laybuttonplabasket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/llViewPager">
            <RelativeLayout
                android:id="@+id/rlAddPlanButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:layout_weight="1"
                android:paddingHorizontal="@dimen/_5sdp"
                android:paddingVertical="@dimen/_7sdp"
                app:layout_constraintTop_toBottomOf="@+id/clCardLayout">
                <ImageView
                    android:id="@+id/imageAddPlan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/add_icon" />
                <TextView
                    android:id="@+id/textAddPlan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_toEndOf="@+id/imageAddPlan"
                    android:fontFamily="@font/poppins"
                    android:text="Add to plan"
                    android:textAlignment="center"
                    android:textColor="@color/white" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlAddCartButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:layout_weight="1"
                android:backgroundTint="#FE9F45"
                android:paddingHorizontal="@dimen/_5sdp"
                android:paddingVertical="@dimen/_7sdp"
                app:layout_constraintTop_toBottomOf="@+id/clCardLayout">

                <ImageView
                    android:id="@+id/imageAddCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/basket_icon" />

                <TextView
                    android:id="@+id/textAddCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_toEndOf="@+id/imageAddCart"
                    android:fontFamily="@font/poppins"
                    android:text="Add to cart"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
