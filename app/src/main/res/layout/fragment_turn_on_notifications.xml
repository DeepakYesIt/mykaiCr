<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.authfragment.TurnOnNotificationsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginBottom="@dimen/_30sdp">

                <ImageView
                    android:id="@+id/imgBackNotifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/black_images_back" />

                <ImageView
                    android:id="@+id/imagesNotifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:src="@drawable/img_notifications_icons" />

                <TextView
                    android:id="@+id/tvTurnOnNotifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imagesNotifications"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/turn_on_notifications"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:id="@+id/tvTurnOnNotificationDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTurnOnNotifications"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/poppins"
                    android:textColor="#3C4541"
                    android:text="@string/turn_on_notificationDesc"
                    android:textSize="@dimen/_11sdp" />

                <RelativeLayout
                    android:id="@+id/rlTurnOnNotifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTurnOnNotificationDesc"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/green_btn_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/poppins_medium"
                        android:paddingVertical="@dimen/_12sdp"
                        android:text="Turn on Notification"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tvNotNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlTurnOnNotifications"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:fontFamily="@font/poppins"
                    android:text="Not now"
                    android:visibility="gone"
                    android:textColor="@color/black" />

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>