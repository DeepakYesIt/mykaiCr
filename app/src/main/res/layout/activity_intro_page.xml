<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_main_background"
    tools:context=".activity.IntroPageActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rlMainImages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_40sdp">

                <ImageView
                    android:id="@+id/images_1"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_270sdp"
                    android:src="@drawable/intro_images1" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/myka_kitchen_ai"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/montserrat_semibold"
                    android:layout_below="@+id/images_1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_18sdp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlNextBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlMainImages"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_35sdp"

                android:background="@drawable/green_btn_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingVertical="@dimen/_10sdp"
                    android:text="Next"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlNextBtn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/poppins"
                android:text="@string/simplify_cooking_meal_planning_and_shopping_all_in_one_place"
                android:textAlignment="center"
                android:textColor="#3C4541"
                android:textSize="@dimen/_12sdp" />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>