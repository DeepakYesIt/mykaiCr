<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginEnd="@dimen/_5sdp"
    android:id="@+id/llMainLayouts"
    android:background="@drawable/calendar_unselect_bg"
    android:paddingHorizontal="@dimen/_3sdp">

    <TextView
        android:id="@+id/tvDayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M"
        android:textSize="@dimen/_13sdp"
        android:textColor="@color/light_black"
        android:fontFamily="@font/poppins"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvDayDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"
        android:fontFamily="@font/poppins"
        android:textColor="@color/light_black"
        android:textSize="@dimen/_13sdp"
        android:gravity="center"
        android:paddingTop="@dimen/_3sdp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#EDEDED"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="@dimen/_5sdp"
        android:weightSum="3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/_5sdp"
            android:layout_weight="1"
            android:src="@drawable/breakfast_indicator_icon"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/_5sdp"
            android:layout_weight="1"
            android:src="@drawable/lunch_indicator_icon"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/_5sdp"
            android:layout_weight="1"
            android:src="@drawable/dinner_indicator_icon"/>

    </LinearLayout>

</LinearLayout>