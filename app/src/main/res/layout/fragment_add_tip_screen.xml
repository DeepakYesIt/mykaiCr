<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.mainfragment.commonscreen.addtipscreen.AddTipScreenFragment">

    <RelativeLayout
        android:id="@+id/layTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="start|center">

        <RelativeLayout
            android:id="@+id/relBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:src="@drawable/back_icon" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Add tip"
            android:textColor="#171D1B"
            android:textSize="@dimen/_15sdp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layTitle"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageCoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/add_tip_main_icon"/>

            <TextView
                android:id="@+id/tvDescriptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageCoin"
                android:textColor="#3C4541"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:text="100% of your tip goes to your courier. Tips are based on your order total of Â£49.23 before any discounts or promotions."
                android:textSize="@dimen/_11sdp"/>

            <LinearLayout
                android:id="@+id/llNotNow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_below="@+id/tvDescriptions"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linearNotNow"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edittext_bg"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvNotNow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/black"
                        android:text="Not\nnow"
                        android:textSize="@dimen/_9sdp"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llTenPerc"
                    android:layout_width="0dp"
                    android:padding="@dimen/_2sdp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edittext_bg"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvTenPerc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:text="10%"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="@dimen/_10sdp"/>

                    <TextView
                        android:id="@+id/tvDollarSeven"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/light_green"
                        android:text="$"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center"
                        android:textSize="@dimen/_11sdp"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llFifteenPerc"
                    android:layout_width="0dp"
                    android:padding="@dimen/_2sdp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edittext_bg"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvFifteenPerc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="15%"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center"
                        android:textSize="@dimen/_10sdp"/>

                    <TextView
                        android:id="@+id/tvDollarNine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/light_green"
                        android:text="$"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="@dimen/_11sdp"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llTwentyPerc"
                    android:layout_width="0dp"
                    android:padding="@dimen/_2sdp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edittext_bg"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:gravity="center"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvTwelvePerc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="20%"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center"
                        android:textSize="@dimen/_10sdp"/>

                    <TextView
                        android:id="@+id/tvDollarTwelve"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/light_green"
                        android:gravity="center"
                        android:text="$"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="@dimen/_11sdp"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lltwentyFivePerc"
                    android:layout_width="0dp"
                    android:padding="@dimen/_2sdp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edittext_bg"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:gravity="center"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvTwentyFivePerc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="25%"
                        android:textSize="@dimen/_10sdp"/>

                    <TextView
                        android:id="@+id/tvDollarFifteen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/light_green"
                        android:text="$"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="@dimen/_11sdp"/>

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relAddManually"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llNotNow"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/circular_edittext_bg">

                <EditText
                    android:id="@+id/etSignEmailPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:drawableStart="@drawable/dollar_sign_icon"
                    android:drawablePadding="@dimen/_12sdp"
                    android:fontFamily="@font/poppins"
                    android:gravity="center_vertical"
                    android:hint="Add manually"
                    android:padding="@dimen/_10sdp"
                    android:singleLine="true"
                    android:text=""
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey4"
                    android:textSize="@dimen/_11sdp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlProceedAndPay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/_50sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:background="@drawable/gray_btn_unselect_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins"
                    android:paddingVertical="@dimen/_10sdp"
                    android:text="Proceed and Pay"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp" />

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>