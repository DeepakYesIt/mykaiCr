<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MykaApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#06C169</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#06C169</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Custom_Slider_Style" parent="Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/slider_overlay</item>
    </style>

    <style name="slider_overlay">
        <item name="colorPrimary">@color/grey1</item>
        <item name="colorOnPrimary">@color/orange</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabTextColor">@color/light_black</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>
    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="customRoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopRight">17dp</item>
        <item name="cornerSizeTopLeft">17dp</item>
        <item name="cornerSizeBottomLeft">17dp</item>
        <item name="cornerSizeBottomRight">17dp</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_50sdp</item>
    </style>

    <style name="CornerCut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5%</item>
    </style>


    <style name="RoundedSquare">
        <item name="cornerSize">5%</item>
    </style>

    <style name="RoundedSquare1">
        <item name="cornerSize">10%</item>
    </style>

    <style name="CalendarDateTextStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#000000</item> <!-- Normal text color -->
        <item name="android:state_selected">true</item> <!-- Selected date text color -->

    </style>


</resources>